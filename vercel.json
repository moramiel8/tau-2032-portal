{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/[[...path]].js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[[...path]].js" },
    

    { "src": "/assets/(.*)", "dest": "/client/assets/$1" },
    { "src": "/vite.svg", "dest": "/client/vite.svg" },
    { "src": "/check.txt", "dest": "/client/check.txt" },

    { "src": "/", "dest": "/client/index.html" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
